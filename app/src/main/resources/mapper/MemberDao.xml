<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.show_pet.member.model.dao.MemberDao">

    <resultMap type="member" id="memberMap">
        <id     column="member_id"        property="id"/>
        <result column="role"           property="role"/>
        <result column="activation"     property="activation"/>
        <result column="email"          property="email"/>
        <result column="password"       property="password"/>
        <result column="nickname"       property="nickName"/>
        <result column="photo"          property="photo"/>
        <result column="intro"          property="intro"/>
        <result column="category"       property="category"/>
    </resultMap>

    <insert id="insert" parameterType="member">
        insert into member (email, password, nickname, category)
        values(#{email}, sha1(#{password}), #{nickName}, #{category})
    </insert>

    <select id="findAll" resultMap="memberMap">
        select
            member_id,
            role,
            activation,
            email,
            nickname,
            photo,
            intro,
            category
        from
            member
        order by
            role asc
    </select>

    <select id="findByEmailAndPassword" resultMap="memberMap">
        select
            *
        from
            member
        where
            email=#{email}
            and password=sha1(#{password})
    </select>

    <delete id="delete" parameterType="int">
        delete from member
        where
        member_id=#{id}
    </delete>

</mapper>